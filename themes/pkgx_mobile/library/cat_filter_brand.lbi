{if $brand_cat_actual_count > 8}
    <div class="box-cat-list2" id="filter_sub">
  <div class="hide-scrollbar">
    <div class="stardust-horizontal-scroll-view hide-scrollbar">
      <div class="box-3">
        <div class="nav-mobilee">
    {foreach from=$brand_cat_list item=cat}
        {if $cat.cat_id > 0}
         <div class="box-ca">   
                <a href="{$cat.url}">
                    {if $cat.icon}
                      <div class="ima-ca">  <img width="55px" height="55px" src="{$cat.icon}" alt="{$cat.cat_name|escape:html}"></div>
                    {/if}
                    <div class="nam-ca">{$cat.cat_name|escape:html}</div>
                </a>
            </div>
        {/if}
    {/foreach}

 </div> </div>
    </div>
  </div>
</div>

{else}
<div class="box-cat-list3" id="filter_sub">
  <div class="hide-scrollbar">
    <div class="stardust-horizontal-scroll-view hide-scrollbar2">
      <div class="box-3">
        <div class="nav-mobilee2">
    {foreach from=$brand_cat_list item=cat}
        {if $cat.cat_id > 0}
         <div class="box-ca">   
                <a href="{$cat.url}">
                    {if $cat.icon}
                      <div class="ima-ca">  <img width="55px" height="55px" src="{$cat.icon}" alt="{$cat.cat_name|escape:html}"></div>
                    {/if}
                    <div class="nam-ca">{$cat.cat_name|escape:html}</div>
                </a>
            </div>
        {/if}
    {/foreach}

 </div> </div>
