<div id="gallery">
    <div class="owl-carousel owl-theme" id="gallery_products">
    {if $pictures}
        {foreach from=$pictures item=picture name=pictures}
        <div class="item">
            {if $picture.img_url_webp}
            <picture>
                <source width="330" height="330" srcset="{$cdn_path}/{$picture.img_url_webp}" type="image/webp" />
                <img width="330" height="330" src="{$cdn_path}/{$picture.img_url}" alt="{$goods.goods_name|escape}">
            </picture>
            {else}
            <img width="330" height="330" src="{$cdn_path}/{$picture.img_url}" alt="{$goods.goods_name|escape}">
            {/if}
            {if $goods.is_hot eq 1} <div class="icon_hot"></div> {/if}
            {if $goods.goods_number eq 0} <p class="preorder">Hàng đang về</p>{/if}
        </div>
        {/foreach}
    {else}
        <div class="item no-gallery">
            {if $goods.goods_img_webp}
            <picture>
                <source width="330" height="330" srcset="{$cdn_path}/{$goods.goods_img_webp}" type="image/webp" />
                <img width="330" height="330" src="{$cdn_path}/{$goods.goods_img}" alt="{$goods.goods_name|escape}">
            </picture>
            {else}
            <img width="330" height="330" src="{$cdn_path}/{$goods.goods_img}" alt="{$goods.goods_name|escape}">
            {/if}
            {if $goods.is_hot eq 1} <div class="icon_hot"></div> {/if}
            {if $goods.goods_number eq 0} <p class="preorder">Hàng đang về</p>{/if}
        </div>
    {/if}

    </div>
