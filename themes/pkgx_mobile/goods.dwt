{include file='library/goods_detail.lbi'}
{if $properties}
    <div class="tableparameter" id="tableparameter">
        <h2>Thông số kỹ thuật</h2>
        <ul class="parameter">
            {foreach from=$properties item=property_group key=key name=propertygroup}
            {foreach from=$property_group item=property name=property_list}
            <li class="pro{$property.id|escape:html}"><span>{$property.name|escape:html}:</span> <span>{$property.value|escape:html}</span></li>
            {/foreach}
            {/foreach}
        </ul>
        <div class="viewparameterfull" id="showall_parameter">Xem chi tiết thông số kỹ thuật</div>
        <div class="viewparameterfull hidden" id="less_parameter">Thu gọn</div>
    </div>
{/if}
