
<html lang="vi">
<!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
<!--[if lt IE 9]>
  <script src="{$option.static_path}/js/html5shiv.js"></script>
  <script src="{$option.static_path}/js/respond.min.js"></script>
<![endif]-->
<head>
    <meta charset="utf-8">
    <meta content="NOINDEX,NOFOLLOW" name="robots" />
<title>{if $action eq 'login'}{$lang.login_title}{/if}{if $action eq 'register'}{$lang.register_title}{/if}{if $action eq 'get_password'}{$lang.get_password}{/if}{if $action eq 'qpassword_name'}{$lang.get_password}{/if}{if $action eq 'get_passwd_question'}{$lang.get_password}{/if}{if $action eq 'reset_password'}{$lang.reset_password}{/if} - {$page_title}</title>
{include file='library/html_header_user.lbi'}
<link type="text/css" href="{$option.static_path}/css/user_passport.css" rel="stylesheet" />
</head>
<body id="page_{$pname}">
{include file='library/page_header_user.lbi'}
<section>
	<div class="user_form_wrapper clearfix" id="user_form_wrapper">

			{if $action eq 'login'}
			<form method="post" action="thanh-vien" class="user_form" id="user_login">
				<h1>{$lang.login_title}</h1>
				<label for="username_login">
					<input type="text" name="username" value="" placeholder="{$lang.label_username}" tabindex="2" id="username_login"/>
                    <span class="req">*</span>
				</label>
				<label for="password_login">
					<input type="password" name="password" value="" placeholder="{$lang.label_password}" tabindex="3" id="password_login"/>
                    <span class="req">*</span>
				</label>
				{if $enabled_captcha}
				<label for="captcha_login">
					<input type="text" name="captcha" placeholder="{$lang.comment_captcha}" maxlength="4" size="6" tabindex="3" class="captcha" id="captcha_login"/><span><img src="ajax?act=captcha&is_login=1&{$rand}" alt="{$lang.comment_captcha}" class="captcha tip" title="{$lang.captcha_tip}" onClick="this.src='ajax?act=captcha&is_login=1&'+Math.random()"></span>
                    <span class="req">*</span>
				</label>
				{/if}
				<div class="checkbox_wrap label">
					<label for="remember_login"><input type="checkbox" name="remember" value="1" tabindex="3" class="checkbox" id="remember_login"/>{$lang.remember}</label>
				</div>
				<div class="submit_wrap">
					<input type="submit" value="{$lang.btn_login}" tabindex="4" class="submit btn_login"/>
					<input type="hidden" name="act" value="act_login"/>
					<input type="hidden" name="back_act" value="{$back_act}"/>
                    <p class="ext_links"><a href="thanh-vien?act=get_password">{$lang.forgot_password}</a>
                    <a href="thanh-vien?act=register" class="button text_button">{$lang.register_now}</a></p>
				</div>
			</form>
			{/if}
			{if $action eq 'register'}
			{if $shop_reg_closed eq 1}
			<span class="closed">{$lang.shop_register_closed}</span>
			{else}
			<form method="post" action="thanh-vien" class="user_form" id="user_reg">
				<h1>{$lang.register_title}</h1>
				<label for="username"><span class="req">*</span>
					<input class="required" type="text" name="username" placeholder="{$lang.label_username}" tabindex="2" id="username_reg"/>
				</label>
				<label for="email"><span class="req">*</span>
					<input class="required" type="text" name="email" placeholder="{$lang.email}" tabindex="3" id="email_reg"/>
				</label>
				<label for="password"><span class="req">*</span>
					<input class="required" type="password" name="password" placeholder="{$lang.label_password}" tabindex="4" id="password_reg"/>
				</label>
				<label for="confirm_password"><span class="req">*</span>
					<input class="required" type="password" name="confirm_password" placeholder="{$lang.label_confirm_password}" tabindex="5" id="password_c_reg"/>
				</label>
				{foreach from=$extend_info_list item=field}
				{if $field.id eq 6}
				<label for="sel_question">{if $field.is_need}<span class="req">*</span>{/if}{$lang.passwd_question}
					<select name="sel_question" tabindex="10"{if $field.is_need} class="required"{/if} id="sel_ques">
						<option value="0">{$lang.sel_question}</option>
						{html_options options=$passwd_questions selected=$profile.passwd_question}
					</select>
				</label>
				<label for="passwd_answer"{if $field.is_need} id="pw_ques"{/if}>{if $field.is_need}<span class="req">*</span>{/if}
					<input type="text" name="passwd_answer" value="{$profile.passwd_answer}" placeholder="{$lang.passwd_answer}" maxlength="20" tabindex="10"{if $field.is_need} class="required"{/if} id="pw_answer"/>
				</label>
				{else}
				<label for="extend_field_{$field.id}">{if $field.is_need}<span class="req">*</span>{/if}
					<input type="text" name="extend_field{$field.id}" placeholder="{$field.reg_field_name}" value="{$field.content}" tabindex="10"{if $field.is_need} class="required"{/if} id="extend_field_{$field.id}"/>
				</label>
				{/if}
				{/foreach}
				{if $enabled_captcha}
				<label for="captcha"><span class="req">*</span>
					<input class="required" placeholder="{$lang.comment_captcha}" type="text" name="captcha" maxlength="4" size="6" tabindex="11" class="captcha" id="captcha_reg"/>
					<span><img src="ajax?act=captcha&{$rand}" alt="{$lang.comment_captcha}" class="captcha tip" title="{$lang.captcha_tip}" onClick="this.src='ajax?act=captcha&'+Math.random()"></span>
				</label>
				{/if}
				<label for="agreement">
					<input type="checkbox" name="agreement" tabindex="12" value="1" checked="checked" id="agreement"/>
					<em>{$lang.agreement}</em>
				</label>
				<div class="submit_wrap">
					<input type="submit" name="submit" value="{$lang.btn_register}" tabindex="14" class="submit btn_register"/>
					<input type="hidden" name="act" value="act_register"/>
					<input type="hidden" name="back_act" value="{$back_act}"/>
                    <p class="ext_links"><a href="thanh-vien?act=login">{$lang.login_now}</a></p>
				</div>
			</form>
			{/if}

			{/if}
			{if $action eq 'get_password'}
			<script type="text/javascript">
			{foreach from=$lang.password_js item=item key=key}
			var {$key} = "{$item}";
			{/foreach}
			</script>
			<form method="post" action="thanh-vien" class="user_form" id="user_gpw">
				<h1>{$lang.get_password}</h1>
				<label for="user_name"><span class="req">*</span>
					<input type="text" name="user_name" placeholder="{$lang.label_username}" tabindex="2" id="username_gpw"/>
				</label>
				<label for="email"><span class="req">*</span>
					<input type="text" placeholder="{$lang.email}" name="email" tabindex="3" id="email_gpw"/>
				</label>
				<div class="submit_wrap">
					<input type="submit" value="{$lang.submit}" tabindex="4" class="submit"/>
					<input type="hidden" name="act" value="send_pwd_email"/>
                    <p class="ext_notice">{$lang.get_password_tip_text}</p>
                    <p class="ext_links">
                        <a href="thanh-vien?act=qpassword_name">{$lang.get_password_by_question}</a> Hoặc <a href="thanh-vien?act=login">{$lang.login_now}</a>
                    </p>

				</div>

			</form>

			{/if}
			{if $action eq 'qpassword_name'}
			<form method="post" action="thanh-vien" class="user_form" id="user_qpn">
				<h1>{$lang.get_question_username}</h1>
				<label for="user_name">
					<input type="text" placeholder="{$lang.label_username}" name="user_name" tabindex="2" id="username_qpn"/>
				</label>
				<div class="submit_wrap">
					<input type="submit" value="{$lang.submit}" tabindex="3" class="submit btn_special btn_submit"/>
					<input type="hidden" name="act" value="get_passwd_question"/>
                    <p class="ext_notice">{$lang.get_password_tip_text2}</p>
                    <p class="ext_links">
                        <a href="thanh-vien?act=get_password" >{$lang.get_password_by_mail}</a> Hoặc <a href="thanh-vien?act=login">{$lang.login_now}</a>
                    </p>
				</div>
			</form>

			{/if}
			{if $action eq 'get_passwd_question'}
			<form method="post" action="thanh-vien" class="user_form" id="user_gpq">
				<h1>{$lang.input_answer}</h1>
				<div class="req"><b>*</b>{$lang.required_indicates}</div>
				<p class="label"><b>{$lang.passwd_question}{$lang.colon}</b>
					<em>{$passwd_question}</em>
				</p>
				<label for="passwd_answer"><b><span class="req">*</span>{$lang.passwd_answer}{$lang.colon}</b>
					<input type="text" name="passwd_answer" tabindex="2" id="pw_answer"/>
				</label>
				{if $enabled_captcha}
				<label for="captcha"><b><span class="req">*</span>{$lang.comment_captcha}{$lang.colon}</b>
					<input type="text" name="captcha" maxlength="4" size="6" tabindex="3" class="captcha" id="captcha_gpq"/><span><img src="ajax?act=captcha&is_login=1&{$rand}" alt="{$lang.comment_captcha}" class="captcha tip" title="{$lang.captcha_tip}" onClick="this.src='ajax?act=captcha&is_login=1&'+Math.random()"></span>
				</label>
				{/if}
				<div class="submit_wrap">
					<input type="submit" value="{$lang.submit}" tabindex="4" class="submit btn_special btn_submit"/>
					<input type="hidden" name="act" value="check_answer"/>
				</div>
			</form>
			<div class="extra">
				<h2>{$lang.get_password_tip}</h2>
				<p>{$lang.get_password_tip_text2}</p>
				<p><a href="thanh-vien?act=get_password" class="button"><span>{$lang.get_password_by_mail}</span></a></p>
			</div>
			{/if}
			{if $action eq 'reset_password'}
			<script type="text/javascript">
			{foreach from=$lang.password_js item=item key=key}
			var {$key} = "{$item}";
			{/foreach}
			</script>
			<form action="thanh-vien" method="post" class="user_form" id="user_rpw">
				<h1>{$lang.reset_password}</h1>
				<div class="req"><b>*</b>{$lang.required_indicates}</div>
				<label for="new_password"><b><span class="req">*</span>{$lang.new_password}{$lang.colon}</b>
					<input type="password" name="new_password" tabindex="1" value="" id="password_rpw"/>
				</label>
				<label for="confirm_password"><b><span class="req">*</span>{$lang.confirm_password}{$lang.colon}</b>
					<input type="password" name="confirm_password" tabindex="2" value="" id="password_c_rpw"/>
				</label>
				<div class="submit_wrap">
					<input type="submit" value="{$lang.confirm_submit}" tabindex="4" class="submit btn_special btn_submit"/>
					<input type="hidden" name="act" value="act_edit_password"/>
					<input type="hidden" name="uid" value="{$uid}"/>
					<input type="hidden" name="code" value="{$code}"/>
				</div>
			</form>
			<div class="extra">
				<h2>{$lang.get_password_tip}</h2>
				<p>{$lang.get_password_tip_text3}</p>
			</div>
			{/if}

	</div>
</section>
{include file='library/page_footer_user.lbi'}
{insert_js name='default.Desktop.min.js' no_minify='js/jquery.min.1.8.3.js,js/plugins.js,js/lang.vi_vn.js' minify='js/global.js,js/init.js'}

<script type="text/javascript" src="{$option.static_path}/js/user.js"></script> -->
<script type="text/javascript">
$(document).ready(function() {
{if $action eq 'login'}validLogin();{/if}
{if $action eq 'register'}validRegister();{/if}
{if $action eq 'get_password'}validGetpw();{/if}
{if $action eq 'qpassword_name'}validQpn();{/if}
{if $action eq 'get_passwd_question'}validGpq();{/if}
{if $action eq 'reset_password'}validRpw();{/if}

});

</script>
{include file='library/html_footer_user.lbi'}
</body>
</html>