<!DOCTYPE html>
<html lang="vi-VN">
<!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
<!--[if lt IE 9]>
  <script src="{$option.static_path}/js/html5shiv.js"></script>
  <script src="{$option.static_path}/js/respond.min.js"></script>
<![endif]-->
<head>

    <meta charset="utf-8">
{if $description}<meta name="description" content="{$description}"/>{/if}
{if $keywords}<meta name="keywords" content="{$keywords}"/>{/if}
<title>{$page_title}</title>
 <base href="{$base_path}/">
<meta name="viewport" content="width=device-width" />
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
<link type="image/x-icon" href="{$option.static_path}/img/favicon.ico" rel="shortcut icon" />
{if $auto_redirect}<meta http-equiv="refresh" content="3;url={$message.back_url}" />{/if}
<link type="text/css" href="{$option.static_path}/css/global.css" rel="stylesheet" />
</head>
<body id="page_{$pname}">
{include file='library/page_header.lbi'}
<section>
	{include file='library/ur_here.lbi'}
	<!-- TemplateBeginEditable name="主栏上方" --><!-- TemplateEndEditable -->
	<div class="activity_list box full_box">
		<div class="hd"><h3>{$lang.package_list}</h3><div class="extra"></div></div>
		<div class="bd">
			{foreach from=$list item=val name=list}
			<div class="item{if $smarty.foreach.list.first} first{/if}" id="{$val.act_id}">
				<h2 class="name">{$val.act_name}</h2>
				<dl class="table">
					<dt>{$lang.label_start_time}</dt><dd>{$val.start_time}</dd>
					<dt>{$lang.label_end_time}</dt><dd class="even">{$val.end_time}</dd>
					<dt>{$lang.orgtotal}{$lang.colon}</dt><dd class="price">{$val.subtotal}</dd>
					<dt>{$lang.package_price}{$lang.colon}</dt><dd class="price even">{$val.package_price}</dd>
					<dt>{$lang.saving}{$lang.colon}</dt><dd class="price">{$val.saving}</dd>
					<dt>{$lang.package_goods}{$lang.colon}</dt>
					<dd class="even">
						<div class="goods_list display_text">
						<ul class="clearfix">
							{foreach from=$val.goods_list item=goods name=val_goods_list}
							<li{if $smarty.foreach.val_goods_list.first} class="first"{/if}>
								<span class="photo">
									<a href="{siy:build_uri app='goods' gid=$goods.goods_id append=$goods.goods_name}" title="{$goods.goods_name|escape:html}" class="image"><img src="{$option.static_path}{$goods.goods_thumb}" alt="{$goods.goods_name|escape:html}"/></a>
								</span>
								<span class="info">
									<a href="{siy:build_uri app='goods' gid=$goods.goods_id append=$goods.goods_name}" title="{$goods.goods_name|escape:html}" class="name">{$goods.goods_name}</a>
									<em class="price">{$goods.rank_price}</em>
								</span>
								<span class="action">
									<a href="{siy:build_uri app='goods' gid=$goods.goods_id append=$goods.goods_name}" class="button"><span>{$lang.btn_detail}</span></a>
								</span>
							</li>
							{/foreach}
						</ul>
						</div>
					</dd>
					{if $val.act_desc}<dt>{$lang.desc}{$lang.colon}</dt><dd>{$val.act_desc}</dd>{/if}
					<dt>&nbsp;</dt><dd class="even"><a href="javascript:addPackageToCart({$val.act_id})" class="button brighter_button"><span>{$lang.add_to_cart}</span></a></dd>
				</dl>
			</div>
			{/foreach}
		</div>
	</div>
	<!-- TemplateBeginEditable name="主栏下方" --><!-- TemplateEndEditable -->
</section>
{include file='library/page_footer.lbi'}
{insert_js name='default.Desktop.min.js' no_minify='js/jquery.min.1.8.3.js,js/plugins.js,js/lang.vi_vn.js' minify='js/global.js,js/init.js'}
{include file='library/html_footer.lbi'}
</body>
</html>
