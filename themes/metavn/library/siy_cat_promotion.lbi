{if $cat_promotion and $option.cat_promotion_number}
<dl class="cat_promotion clearfix">
	<dt>{$lang.cat_promotion_label}</dt>
	{foreach from=$cat_promotion item=promotion name=promotion}
	{if $smarty.foreach.promotion.index lt $option.cat_promotion_number}
	<dd><a href="{$promotion.url}">{$promotion.name}</a></dd>
	{/if}
	{/foreach}
</dl>
{/if}