<!DOCTYPE html>
<html lang="vi-VN">
<!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
<!--[if lt IE 9]>
  <script src="{$option.static_path}/js/html5shiv.js"></script>
  <script src="{$option.static_path}/js/respond.min.js"></script>
<![endif]-->
<head>
    {include file='library/html_header.lbi'}
    {if $keywords}<meta name="keywords" content="{$keywords}"/>{/if}
    <title>{$page_title}</title>
    <link rel="canonical" href="{$base_path}/{$goods.url}"/>
    <link rel="alternate" href="{$base_path}/{$goods.url}" hreflang="vi-vn" />
    <meta property="og:url" itemprop="url" content="{$base_path}/{$goods.url}" />
    <meta itemprop="image" content="{$cdn_path}/{$goods.goods_img}" />
    <meta property="og:image" content="{$cdn_path}/{$goods.goods_img}" />
    <meta property="og:image:secure_url" itemprop="thumbnailUrl" content="{$cdn_path}/{$goods.goods_img}" />
    <meta property="og:image:alt" content="{$goods.goods_name}" />
    <script type="application/ld+json">
    {
      "@context": "https://schema.org/",
      "@type": "Product",
      "name": "{$goods.goods_name}",
      "url": "{$base_path}/{$goods.url}",
      "image": [
        "{$cdn_path}/{$goods.goods_img}"
      ],
      "description": "{$description}",
      "sku": "{$goods.goods_sn}",
      "mpn": "{$goods.goods_sn}",
      "brand": {
        "@type": "Brand",
        "name": "{$goods.goods_brand}"
      },
      "offers": {
        "@type": "Offer",
        "url": "{$base_path}/{$goods.url}",
        "priceCurrency": "VND",
        "price": "{$goods.shop_price_raw}",
        "itemCondition": "https://schema.org/NewCondition",
        "availability": "https://schema.org/InStock"
      },
      "aggregateRating": {
        "@type": "AggregateRating",
        "ratingValue": "{$avg_rating}",
        "reviewCount": "{$review_count}",
        "bestRating": "5",
        "worstRating": "1"
      }
    }
    </script>

{insert_css files="css/global.css,owl-carousel/owl.carousel.2.3.4.min.css,css/goods.css"}
</head>
<body id="page_{$pname}">
{include file='library/page_header.lbi'}
<section>
{include file='library/ur_here.lbi'}
{include file='library/goods_detail.lbi'}
<div class="clr"></div>
 <!-- TemplateBeginEditable name="BanChay" -->
<!-- TemplateEndEditable -->
<div class="clr"></div>
<div class="col_main">
{$render.before_col_main}
 <div id="goods_info">
    {$render.before_goods_info}
    {if $feature_pictures}
    <div class="characteristics">
        <h2>Đặc điểm nổi bật của {$goods.goods_name}</h2>
        <ul class="owl-carousel owl-theme" id="gallery_feature">
            {foreach from=$feature_pictures item=picture name=pictures}
            <li class="item">
                <img src="{$cdn_path}{$picture.img_url}" alt="{$goods.goods_name|escape}"></a>
            </li>
            {/foreach}
        </ul>
    </div>
    {/if}
    <article id="description">
      <div class="article_content">

    {if $goods.goods_desc}
        {$goods.goods_desc}
        <div class="view-more hidden">
        <p id="btn-viewmore"><span id="view1">Đọc thêm </span><!-- <span id="view2" class="hidden">Thu gọn </span> --></p>
        </div>
    {/if}
    </div>
  </article>

    <!-- TemplateBeginEditable name="BottomLeft" -->
<!-- TemplateEndEditable -->
        <!-- TemplateBeginEditable name="Comment" -->
<!-- #BeginLibraryItem "/library/comments.lbi" -->
<div class="comment_box" id="comment">
	<div class="hd"><div>Có <em>{siy:comment_count id=$id type=$type}</em> Đánh giá</div></div>
	<div id="comment_wrapper">{insert name='comments' type=$type id=$id}</div>
</div>
 <!-- #EndLibraryItem -->
<!-- TemplateEndEditable -->
        {$render.after_goods_info}
 </div>
{$render.after_col_main}
</div>
<!-- #end Col_main -->
<div class="col_sub">
    {$render.before_col_sub}
    {if $properties}
    <div class="tableparameter" id="tableparameter">
        <h2>Thông số kỹ thuật</h2>
        <ul class="parameter">
            {foreach from=$properties item=property_group key=key}
             {foreach from=$property_group item=property name=property_list}
            {if $smarty.foreach.property_list.index < 10}
            <li class="pro{$property.id|escape:html}"><span>{$property.name|escape:html}:</span> {$property.value|escape:html}</li>
            {/if}
             {/foreach}
            {/foreach}
        </ul>
        <div class="viewparameterfull">Xem chi tiết thông số kỹ thuật</div>
    </div>
    {/if}
        <!-- TemplateBeginEditable name="TopRight" -->
<!-- TemplateEndEditable -->
    <!-- TemplateBeginEditable name="Right" -->
<!-- #BeginLibraryItem "/library/goods_article.lbi" -->
{if $goods_article_list}
<div class="box clearfix box_cat_articles">
	<h4 class="box_title">{$lang.article_releate}</h4>
	<ul class="cat_articles">
		{foreach from=$goods_article_list item=article name=goods_article_list}
		<li>
            <a href="{$article.url}">
            	{if $article.thumb}
                <picture>
                    <source width="100" height="70" srcset="{$cdn_path}/{$article.thumb}" type="image/webp" />
                    <img width="100" height="70" alt="{$article.title|escape}"  src="{$cdn_path}/{$article.thumb}">
                </picture>
                {else}
                    <img width="100" height="70" alt="{$article.title|escape}"  src="{$cdn_path}/{$article.thumb}">
                {/if}
                <h3>{$article.title|escape:html}</h3>
                <span>{$article.viewed} lượt xem</span>
            </a>
        </li>
		{/foreach}
	</ul>
</div>
{/if}

 <!-- #EndLibraryItem -->
<!-- TemplateEndEditable -->
    <!-- TemplateBeginEditable name="BottomRight" -->
<!-- #BeginLibraryItem "/library/recommend_best.lbi" -->
{if $best_goods}
 <div class="box recommend_best">
  <div class="hd">
        <div class="box_title">Top sản phẩm {$lang.best_goods}</div>
        <div class="extra"><a href="tim-kiem?intro=best">Xem tất cả</a></div>
    </div>
	<ul class="homeproduct {if $pname eq 'index'}_nextpre owl-carousel owl-theme{/if}" id="best_goods">
		{foreach from=$best_goods item=goods name=best_goods}
		<li data-id="{$goods.id}">
            {if $goods.discount}<span class="rate">Giảm {$goods.discount}</span>{/if}
			<a href="{$goods.url}" title="{$goods.name|escape:html}">
                {if $goods.thumb_webp}
                <picture>
                    <source width="150" height="150" srcset="{$cdn_path}/{$goods.thumb_webp}" type="image/webp" />
                    <img width="150" height="150" class="photo" src="{$cdn_path}/{$goods.thumb}" alt="{$goods.name|escape:html}"/>
                </picture>
                {else}
                <img width="150" height="150" class="photo" src="{$cdn_path}/{$goods.thumb}" alt="{$goods.name|escape:html}"/>
                {/if}
                {if $goods.is_hot} <span class="icon_hot"></span> {/if}
                {if $goods.goods_number eq 0} <p class="preorder">Hàng đang về</p>{/if}
                <h3>{$goods.name|escape:html}</h3>
                <div class="price">
                    Giá Sỉ
                     {if $goods.promote_price}
                    <strong>{$goods.promote_price}</strong><span>{$goods.shop_price}</span>
                     {else}
                     <strong>{$goods.shop_price}</strong>
                    {/if}
                </div>
           <p class="cprice">Giá CK: {$goods.partner_price}</p> 
                 <!--    <p class="cprice">Giá Bán Lẻ: {$goods.deal_price}</p> -->
              <!--    <div class="ratingresult">
                    <span class="rank rank_{$goods.comment_rank}"></span>
                    <span>{$goods.comment_count} đánh giá</span>
                </div> -->
                <div class="promotion clr">{$goods.seller_note}</div>
            </a>
             <div class="form_add form_add{$goods.id}">
            <div class="button-container">
                <button onclick="qtyMinus(this)" class="qty_button cart-qty-minus" type="button" value="-">-</button>
                <input type="text" min="1" max="10" class="qty qty{$goods.id}" step="1" name="goods_number" value="1">
                <button onclick="qtyPlus(this)"  class="qty_button cart-qty-plus" type="button" value="+">+</button>
            </div>
            <button class="quick_add" type="button" onclick="quickBuy({$goods.id})"><i class="icontgdd-cart"></i></button>
        </div>
		</li>
		{/foreach}
	</ul>
</div>
{/if}

 <!-- #EndLibraryItem -->
<!-- #BeginLibraryItem "/library/goods_related.lbi" -->
{if $related_goods}
<div class="box goods_related" id="related">
    {if $pname eq 'goods'}
    <h4 class="box_title">Sản phẩm liên quan</h4>
   {/if}
	<ul class="homeproduct">
		{foreach from=$related_goods item=releated_goods_data name=related_goods}
		<li>
			<a href="{$releated_goods_data.url}">
                {if $releated_goods_data.thumb_webp}
                <picture>
                    <source width="150" height="150" srcset="{$cdn_path}/{$releated_goods_data.thumb_webp}" type="image/webp" />
                    <img src="{$cdn_path}/{$releated_goods_data.goods_thumb}" alt="{$releated_goods_data.goods_name|escape:html}"/>
                </picture>
                {else}
                <img src="{$cdn_path}/{$releated_goods_data.goods_thumb}" alt="{$releated_goods_data.goods_name|escape:html}"/>
                {/if}
                {if $releated_goods_data.goods_number eq 0} <p class="preorder">Hàng đang về</p>{/if}

				<h3>{$releated_goods_data.goods_name}</h3>
                <div class="price">
                Giá sỉ <strong>{if $releated_goods_data.promote_price neq 0}{$releated_goods_data.formated_promote_price}<del>{$releated_goods_data.shop_price}</del>{else}{$releated_goods_data.shop_price}{/if}</strong>
                </div>
            <p class="cprice">Giá CK: {$releated_goods_data.partner_price}</p> 
             <!--   <p class="cprice">Giá Lẻ: {$releated_goods_data.deal_price}</p> -->
                          <div class="labelw">
                {if $goods.is_hot}<span class="label is_hot">Nổi bật</span>{/if}
                {if $goods.is_best}<span class="label is_best">Bán chạy</span>{/if}
                {if $goods.is_new}<span class="label is_new">Mới</span>{/if}
                </div>
            <!--      <div class="ratingresult">
                    <span class="rank rank_{$goods.comment_rank}"></span>
                    <span>{$releated_goods_data.comment_count} đánh giá</span>
                </div> -->
            </a>

		</li>
		{/foreach}
	</ul>
</div>
{/if}

 <!-- #EndLibraryItem -->
<!-- #BeginLibraryItem "/library/goods_fittings.lbi" -->
{if $fittings}
<div class="box accessories" id="fittings">
	<h4 class="box_title">Phụ kiện liên quan</h4>
	<ul class="homeproduct">
		{foreach from=$fittings item=goods name=fittings}
		<li>
			<a href="{$goods.url}">
                {if $goods.thumb_webp}
                <picture>
                    <source width="180" height="180" srcset="{$cdn_path}/{$goods.thumb_webp}" type="image/webp" />
                    <img width="180" height="180" class="photo" src="{$cdn_path}/{$goods.goods_thumb}" alt="{$goods.short_name|escape:html}"/>
                </picture>
                {else}
                <img width="180" height="180" class="photo" src="{$cdn_path}/{$goods.goods_thumb}" alt="{$goods.short_name|escape:html}"/>
                {/if}
				<h3>{$goods.short_name}</h3>
				<strong>{if $goods.promote_price neq 0}{$goods.formated_promote_price}<del>{$goods.shop_price}</del>{else}{$goods.shop_price}{/if}</strong>
              <p class="cprice">Giá CTV: {$goods.partner_price}</p>
           <!--     <p class="cprice">Giá Lẻ: {$goods.deal_price}</p> -->
          <div class="labelw">
                {if $goods.is_hot}<span class="label is_hot">Nổi bật</span>{/if}
                {if $goods.is_best}<span class="label is_best">Bán chạy</span>{/if}
                {if $goods.is_new}<span class="label is_new">Mới</span>{/if}
                </div>
            </a>
            <p class="actions">
                <a href="javascript:fittings_to_flow({$goods.goods_id},{$goods.parent_id})" class="btn_fittings">Mua kèm</a>
            </p>
		</li>
		{/foreach}
	</ul>
</div>
{/if}

 <!-- #EndLibraryItem -->
<!-- TemplateEndEditable -->
    {$render.after_col_sub}
</div>
<!-- #end col_sub -->
<div class="clr"></div>
{include file='library/goods_relate_cate.lbi'}
<!-- TemplateBeginEditable name="BottomPage" -->
<!-- #BeginLibraryItem "/library/history.lbi" -->
{siy:history}
 <!-- #EndLibraryItem -->
<!-- TemplateEndEditable -->
</section>
{include file='library/page_footer.lbi'}
<script type="text/javascript">
    var goodsId = {$goods_id}, goodsIdCurrent = {$goods_id};
</script>
{insert_js name='goods.Desktop.min.js' no_minify='js/jquery.min.1.8.3.js,js/plugins.js,js/lang.vi_vn.js,owl-carousel/owl.carousel.2.3.4.min.js' minify='js/global.js,js/init.js'}

<script type="text/javascript">
$(document).ready(function() {
    /*$('#goods_info').Tabiy();*/
    if($('.properties').length > 0){
        $('.properties').Formiy();
        $('.properties dl').tipsy({gravity: 'e',fade: true,html:true});
        $('.properties label').tipsy({gravity: 's',fade: true,html:true});
        /* Thay đổi hình khi chọn thuộc tính màu sắc */
        $('.properties .radio label').click(function() {
            var gattr_id = $(this).data('gattrid');
            var fl = 0;
            $('#gallery .thumb_inner ul li').each(function(i) {
                var glid = $(this).data('glid');
                if(gattr_id == glid){
                    if(fl == 0){
                        var img = $(this).find('a').attr('href');
                        $('#gallery a.cover').attr('href', img);
                        $('#gallery a.cover img').attr('src', img);
                        fl = fl+1;
                    }
                    $(this).show();
                }else{
                    $(this).hide();
                }
            });
        });
    }

    $('#gallery .thumb_inner').mSlidiy({num:5,step:3});
    $('#purchase_form').ChangePriceSiy();
    /* Thay đổi hình khi hover lên thumb khi dùng gallery Mode color_box */
    var gallery_color_box = $('div.gallery_color_box');
    if(gallery_color_box.length > 0){
        gallery_color_box.find('.thumb_inner a').hover(function() {
            var src = $(this).attr('href');
            $('#gallery a.cover').attr('href', src);
            $('#gallery a.cover img').attr('src', src);
        });
    }

    $('div.gallery_color_box a.color_box').colorbox({current: "Hình thứ {current}/{total} hình", next:'›',previous: '‹',close:'x',onOpen:openGallery,onClosed: closeGallery, fixed:true,scrolling: false,width:'100%',height:'100%',maxHeight: '100%',transition: 'none'});
    function openGallery() {
       $('#cboxContent').addClass('full_gallery');
       $('body').addClass('fixbody');
    }
    function closeGallery() {
       $('#cboxContent').removeClass('full_gallery');
       $('body').removeClass('fixbody');
    }
});
</script>
{include file='library/html_footer.lbi'}
<script type="text/javascript">
    if($("#gallery_feature").length > 0){
        $("#gallery_feature").owlCarousel({items: 1,slideBy: 1,margin:0,lazyLoad:!0,slideSpeed : 2000,nav:!0,dots:!0,loop:!0,responsiveRefreshRate : 200,navText: ['‹','›'],});
    }
    $('.rank_star').rating({
        focus: function(value, link){
            var tip = $('#star_tip');
            tip[0].data = tip[0].data || tip.html();
            tip.html(link.title || 'value: '+value).show();
        },
        blur: function(value, link){
            $('#star_tip').html(link.title).show();
        },
        callback: function(value, link){
           $('#star_tip').html(link.title).show();
           $('div.action-comment').fadeIn('600');
        }
    });
     /* Search Compare */
    $('#search_compare').delayKeyup(function(el){
        var keywords = el.val();
        var show = $('#result_compare');
        var cat_id = $('#_parent_catid').val();
        if(keywords.length >2){
            $.post(
                'tim-kiem?act=search_suggest&category='+cat_id+'&gid='+goodsId,
                {keywords: keywords},
                function(response){
                    var res = $.evalJSON(response);
                    show.show();
                    show.html(res.content);
                },
                'text'
            );
        }else{
            show.hide();
        }
    },1000);
</script>
</body>
</html>
