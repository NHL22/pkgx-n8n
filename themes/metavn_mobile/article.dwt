
<!DOCTYPE html>
<html lang="vi-VN">
<!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
<!--[if lt IE 9]>
  <script src="{$option.static_path}/js/html5shiv.js"></script>
  <script src="{$option.static_path}/js/respond.min.js"></script>
<![endif]-->
<head>
    <meta charset="utf-8">
    {if $description}<meta name="description" content="{$description}"/>{/if}
    {if $keywords}<meta name="keywords" content="{$keywords}"/>{/if}
    <meta content="{$meta_robots}" name="robots" />
    <title>{$page_title}</title>
    {include file='library/html_header.lbi'}
    <link rel="canonical" href="{$base_path}/{$article.url}" />
    <meta property="og:url" itemprop="url" content="{$base_path}/{$article.url}" />

<link rel="alternate" href="{$base_path}/{$article.url}" hreflang="vi-vn" />
    <meta itemprop="image" content="{$cdn_path}/{$article.article_thumb}" />
    <meta property="og:image" content="{$cdn_path}/{$article.article_thumb}" />
    <meta property="og:image:secure_url" itemprop="thumbnailUrl" content="{$cdn_path}/{$article.article_thumb}" />
    <!-- #region FAQDetailSchema-->
<script type = "application/ld+json" > {
        "@context": "http://schema.org",
        "@type": "Article",
        "mainEntityOfPage": {
            "@type": "WebSite",
            "@id": "{$article.url}#WebSite"
        },
        "headline": "{$article.title}",
        "image": "{$cdn_path}/{$article.article_thumb}",
        "description": "{$description}",
        "datePublished": "{$article.add_time}",
        "dateModified": "{$article.add_time}",
        "author": {
            "@type": "Person",
            "@id": "{$article.url}#author",
            "name": "Phụ Kiện Điện Thoại Giá Sỉ"
        },
        "publisher": {
            "@type": "Organization",
            "@id": "https://phukiengiaxuong.com.vn#Organization"
        },
        "commentCount": 1964
    } </script> <!--#endregion-->

    <!--#region FAQWebpage-->
    <script type = "application/ld+json" > {
        "@type": "WebPage",
        "@context": "https://schema.org",
        "@id": "{$article.url}#WebPage",
        "url": "{$article.url}",
        "inLanguage": ["EN", "VN"],
        "name": "{$article.title}",
        "datePublished": "{$article.add_time}",
        "dateModified": "{$article.add_time}",
        "publisher": {
            "@type": "Organization",
            "@id": "https://phukiengiaxuong.com.vn#Organization"
        },
        "description": "{$description}",
        "author": {
            "@type": "Person",
            "@id": "{$article.url}#author",
            "name": "Phụ Kiện Điện Thoại Giá Sỉ"
        },
        "commentCount": 1964
    } </script>
    <!--#endregion-->
    {insert_css files="css/global.css,css/article.css"}
</head>
<body id="page_{$pname}">
{include file='library/page_header_article.lbi'}
<section>
{include file='library/ur_here.lbi'}
<div class="box-cat-list scrollmenu" id="navhome">
        <div>
            {foreach from=get_categories_tree() item='cat' name='categories'}
            <a href="{$cat.url}">{if $cat.icon}<img height="40" src="{$cat.icon}" alt="{$cat.name|escape}">{/if}<span>{$cat.name|escape}</span></a>
            {/foreach}
         </div>
     </div>
{$render.before_col_main}

<article>
    <h1 class="titledetail">{$article.title|escape:html}</h1>
    <div class="userdetail">
        <a>{$article.author}</a>
        <span>{$article.add_time}</span>
        <span>{$article.viewed} lượt xem</span>
    </div>
    {if $article.content}
    <p style="font-weight: 700">{$article.description}</p>
    <div class="article_content">{$article.content}</div>
    {else}
    <p class="empty">{$lang.content_empty}</p>
    {/if}
</article>
 <div class="bottom">
    <!-- TemplateBeginEditable name="Bottom" -->
<!-- #BeginLibraryItem "/library/goods_related.lbi" -->
{if $related_goods}
<div class="box goods_related" id="related">
    <h3 class="box_title">Sản phẩm liên quan</h3>
    <div class="overpromo">
	<ul class="homeproduct listpromo">
		{foreach from=$related_goods item=releated_goods_data name=related_goods}
		<li data-id="{$releated_goods_data.goods_id}">
			<a href="{$releated_goods_data.url}">
                <img src="{$cdn_path}/{$releated_goods_data.goods_thumb}" alt="{$releated_goods_data.goods_name|escape:html}"/>
				<h3>{$releated_goods_data.goods_name}</h3>
				<strong>{if $releated_goods_data.promote_price neq 0}{$releated_goods_data.formated_promote_price}{else}{$releated_goods_data.shop_price}{/if}</strong>
              <!--  <div class="ratingresult">
                    <span class="rank rank_{$goods.comment_rank}"></span>
                    <span>{$releated_goods_data.comment_count} đánh giá</span>
                </div> -->
            </a>
		</li>
		{/foreach}
	</ul>
   </div>
</div>
{/if}
 <!-- #EndLibraryItem -->
<!-- #BeginLibraryItem "/library/article_related.lbi" -->
<h5 class="titlerelate">Tin Liên Quan</h5>
<ul class="newsrelate">
    {foreach from=$new_articles item=article name=article_list}
    <li>
        <a href="{$article.url}" class="linkimg">
            <div class="tempvideo">
                <img alt="{$article.title|escape:html}" src="{$cdn_path}/{$article.thumb}" width="100">
            </div>
            <h3>{$article.title|escape:html}</h3>
            <span class="timepost">{$article.add_time}</span>
        </a>
    </li>
    {/foreach}
</ul>
 <!-- #EndLibraryItem -->
<!-- TemplateEndEditable -->
    {include file='library/comments.lbi'}
 </div>
    {$render.after_col_main}
</section>
{include file='library/page_footer.lbi'}
{insert_js name='article.Mobile.min.js' no_minify='js/jquery.min.1.8.3.js,js/plugins.js,js/lang.vi_vn.js' minify='js/global.js,js/init.js'}
{include file='library/html_footer.lbi'}
{include file='library/html_footer_menu.lbi'}
<script type="text/javascript">
    $(document).ready(function() {
         getW('.overpromo');
          var nav = $('ul.navhome');
        var item_nav = nav.find('li');
        var item_w = item_nav.length*(item_nav.width()+15);
        nav.css('width', item_w);
    });
    $('.rank_star').rating({
        focus: function(value, link){
            var tip = $('#star_tip');
            tip[0].data = tip[0].data || tip.html();
            tip.html(link.title || 'value: '+value).show();
        },
        blur: function(value, link){
            $('#star_tip').html(link.title).show();
        },
        callback: function(value, link){
           $('#star_tip').html(link.title).show();
           $('div.action-comment').fadeIn('600');
        }
    });
    function getW(el){
        var ul = $(el+" ul.listpromo");
        ul.each(function() {
            var li = $(this).find('li');
            var w = li.length*(li.width()+8);
            if(li.length > 1){
                $(this).css('width', w);
            }

        });
    }
</script>

</body>
</html>
